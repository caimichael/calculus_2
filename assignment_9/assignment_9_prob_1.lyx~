\begin_body

\begin_layout Title
Assignment 9 Problem One
\end_layout

\begin_layout Author
Michael Cai
\end_layout

\begin_layout Subparagraph
1.
 Find the limits of each of the following sequences:
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash

\backslash

\end_layout

\end_inset


\end_layout

\begin_layout Standard
(a) 
\begin_inset Formula $a_{n}=(4^{n}n)^{\frac{1}{n}}=4(n^{\frac{1}{n}})$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $n=1,2,3,4,5,...$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $a_{n}=4,4(2)^{\frac{1}{2}},4(3)^{\frac{1}{3}},4(4)^{\frac{1}{4}},4(5)^{\frac{1}{5}}...$
\end_inset

 
\end_layout

\begin_layout Standard
Suppose 
\begin_inset Formula $\lim_{n\rightarrow\infty}n^{\frac{1}{n}}\rightarrow L$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $a_{n}=n^{\frac{1}{n}}\rightarrow L$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $ln(n^{\frac{1}{n}})\rightarrow ln(L)$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{1}{n}ln(n)\rightarrow ln(L)$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{ln(n)}{n}\rightarrow ln(L)$
\end_inset

 
\end_layout

\begin_layout Standard
Using L'Hospitals to evaluate the RHS, which is currently in indeterminate
 form.
\end_layout

\begin_layout Standard
\begin_inset Formula $\frac{ln(n)}{n}=\frac{\frac{1}{n}}{1}=\frac{1}{n}\rightarrow ln(L)$
\end_inset

 
\end_layout

\begin_layout Standard
\begin_inset Formula $e^{n}=L$
\end_inset

 
\end_layout

\begin_layout Standard
Taking the limit as 
\begin_inset Formula $n\rightarrow\infty,$
\end_inset

 
\begin_inset Formula $L\rightarrow1.$
\end_inset

 
\end_layout

\begin_layout Standard
Thus 
\begin_inset Formula $\lim_{n\rightarrow\infty}a_{n}=4$
\end_inset

 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash

\backslash

\end_layout

\end_inset


\end_layout

\begin_layout Standard
(b) 
\begin_inset Formula $a_{n}=n-\sqrt{n^{2}-n}$
\end_inset


\end_layout

\begin_layout Standard

\end_layout

